{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "removeComments": true,
    "esModuleInterop": true,

    "strict": true,
    // EZ Mode
    // "noImplicitAny": true,

    "moduleResolution": "node",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "ESNext",

    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "types/*": ["./src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
